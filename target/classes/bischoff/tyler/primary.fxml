<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>

<HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bischoff.tyler.PrimaryController">
      <VBox style="-fx-background-color: red;" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
         <Button fx:id="primaryButton" text="Refresh" onAction="#switchToSecondary"/>
         <TableView fx:id="ticketTable">
            <columns>
               <TableColumn fx:id="ticketRequests"/>
            </columns>
         </TableView>
      </VBox>

      <VBox alignment="CENTER" style="-fx-background-color: red;" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" spacing="50" stylesheets="@style.css">
         <Button fx:id="filterButton" text="Filter" onAction="#filter"/>
         <Button fx:id="addModifyButton" text="Add/Modify" onAction="#addModify"/>
         <Button fx:id="deleteButton" text="Delete" onAction="#delete"/>

         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding> 
      </VBox>

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</HBox>
